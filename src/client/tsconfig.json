        { "path": "../packages/user5" },
        { "path": "../packages/user6" },
        { "path": "../packages/user7" },
        { "path": "../packages/user8" },
        { "path": "../packages/user9" },
        { "path": "../packages/util" }
    ],
    "include": ["**/*"]
